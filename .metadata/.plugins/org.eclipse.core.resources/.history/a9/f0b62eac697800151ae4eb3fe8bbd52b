package Park;

import java.util.Scanner;


public class Parking {
	
	public  void diffTime() {
		
		int h1 ,h2 ,m1 ,m2 ,time ,money=0;
        Scanner scanner = new Scanner(System.in);//System.in用來取得使用者的輸入

        System.out.println("請輸入停車入場時間(24小時制) 現在幾時：");
        h1 = scanner.nextInt(); //取得入場時間的時
        System.out.println("請輸入停車入場時間(24小時制) 現在幾分：");
        m1 = scanner.nextInt(); //取得入場時間的分

        System.out.println("請輸入停車出場時間(24小時制) 現在幾時：");
        h2 = scanner.nextInt(); //取得出場時間的時
        System.out.println("請輸入停車出場時間(24小時制) 現在幾分：");
        m2 = scanner.nextInt(); //取得出場時間的分

        time=60*h2+m2-60*h1-m1;  //將時間都換算成分鐘後,由後相剪
        System.out.print(time);
        if(time < 239 ){
        	money = time/60*20;
        	System.out.print("停放時間" + Math.floor(time/60) + "時"  + "一共"+ money + "元");
        }
		
	}
}
